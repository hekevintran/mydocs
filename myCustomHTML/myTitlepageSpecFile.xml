<!DOCTYPE t:templates [
<!ENTITY hsize0 "10pt">
<!ENTITY hsize1 "12pt">
<!ENTITY hsize2 "14.4pt">
<!ENTITY hsize3 "17.28pt">
<!ENTITY hsize4 "20.736pt">
<!ENTITY hsize5 "24.8832pt">
<!ENTITY hsize0space "7.5pt"> <!-- 0.75 * hsize0 -->
<!ENTITY hsize1space "9pt"> <!-- 0.75 * hsize1 -->
<!ENTITY hsize2space "10.8pt"> <!-- 0.75 * hsize2 -->
<!ENTITY hsize3space "12.96pt"> <!-- 0.75 * hsize3 -->
<!ENTITY hsize4space "15.552pt"> <!-- 0.75 * hsize4 -->
<!ENTITY hsize5space "18.6624pt"> <!-- 0.75 * hsize5 -->
]>

<!-- by shawn giese, v1.0, 3 Nov, 2012 for 1.77.1 xsl docbook stylesheets
     build the actual titlepage stylesheet with a command like
     xsltproc.exe -o myTitlePage.xsl docbook-xsl-1.77.1\template\titlepage.xsl myTitlepageSpecFilexml 
-->

<t:templates xmlns:t="http://nwalsh.com/docbook/xsl/template/1.0"
	           xmlns:param="http://nwalsh.com/docbook/xsl/template/1.0/param"
             xmlns:fo="http://www.w3.org/1999/XSL/Format"
             xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
                         
  <t:titlepage t:element="book" t:wrapper="fo:block">
    <t:titlepage-content t:side="recto">
      <title
	     t:named-template="division.title"
	     param:node="ancestor-or-self::book[1]"
	     text-align="center"
	     font-size="&hsize5;"
	     space-before="&hsize5space;"
	     font-weight="bold"
	     font-family="{$title.fontset}"/>
	  <mediaobject/>   
      <subtitle
		    text-align="center"
		    font-size="&hsize4;"
		    space-before="&hsize0space;"
		    font-family="{$title.fontset}"/>
	  <productname
	  	  space-before="&hsize2space;"
	      font-size="&hsize3;"/>
	  <productnumber font-size="&hsize3;"/>
      <corpauthor font-size="&hsize3;"/>
      <authorgroup font-size="&hsize1;" space-before=""/>
      <author font-size="&hsize1;"
	      space-before="&hsize0space;"/>
      <corpname
          text-align="right"
      	  font-size="&hsize1;"/>	      
    </t:titlepage-content>

  <t:titlepage-content t:side="verso">
      <title
	     t:named-template="book.verso.title"
	     font-size="&hsize2;"
	     font-weight="bold"
	     font-family="{$title.fontset}"/>
	  <productname text-align="center"/>
	  <productnumber text-align="center"/>
      <corpauthor text-align="center"/>
      <authorgroup t:named-template="verso.authorgroup"
         text-align="center"/>
      <author 
         text-align="center"
         space-after="0.5em"/>         
      <pubdate space-before="1em"/>
      <releaseinfo
         space-before="0.5em"
         space-after="0.5em"/>               
      <copyright/>
      <printhistory/>
      <revhistory/>
      
      <abstract/>

      <corpname/>
      <address space-after="&hsize5space;"/>
      <othercredit/>
      <legalnotice font-size="8pt"/>

  </t:titlepage-content>

  <t:titlepage-separator>
      <fo:block break-after="page"/>
  </t:titlepage-separator>

  <t:titlepage-before t:side="recto">
  </t:titlepage-before>

  <t:titlepage-before t:side="verso">
      <fo:block break-after="page"/>
  </t:titlepage-before>
</t:titlepage>
</t:templates>